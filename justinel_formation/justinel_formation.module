 return $items;

}


/**
* Callback for my page
*/

function justinel_formation_page_content () {


  $output = justinel_formation_get_data();
//   $output = justinel_formation_form();
  return $output;

}



/**
* Retour de data from BDD
*/

function justinel_formation_get_data() {
 global $user;
 
	$result =  db_query('SELECT name, status FROM users');
	$output = '<ul>';
	while ($row = db_fetch_array($result)) {
	  $output .= "<li>{$row['name']} :: {$row['status']},</li>";
}
   $output .= '</ul>';
   return $output;
}

