*/

function michell_formation_menu () {
  $items = array();

  $items['formation/michell'] = array(
    'title' => "Michell",
    'description' => 'Formation de Sofian.ML',
    'page callback' => 'michell_formation_page_content',
    'access arguments' => array('access content'),
    'type' => MENU_NORMAL_ITEM,
  );

  return $items;
}

/**
*callback for my page
*/

