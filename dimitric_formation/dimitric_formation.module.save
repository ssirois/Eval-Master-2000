*/
  
function dimitric_formation_menu () {
  $items = array();
    
  $items['formation/dimitric'] = array(
    'title' => "10mitri",
    'description' => 'Formation de 10mitri',
    'page callback' => 'dimitric_formation_page_content',
    'access arguments' => array('access content'),
    'type' => MENU_NORMAL_ITEM,
